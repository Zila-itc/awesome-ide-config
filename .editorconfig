# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline at the end of the file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# 2 spaces for indentation
indent_style = space
indent_size = 2

# 100 characters wide
max_line_length = 100

# Exceptions
[*.md]
insert_final_newline = false
max_line_length = off
trim_trailing_whitespace = false
